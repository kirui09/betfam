<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        android:padding="8dp"
        android:layout_marginBottom="40dp">



<TableLayout
    android:id="@+id/myTableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:stretchColumns="*"
    android:padding="16dp"
    android:background="#3498db">

    <TableRow
        android:id="@+id/table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3498db"
        android:padding="8dp">

        <TextView
            android:id="@+id/dateOfInputTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Date"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/companiesPluckedToTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Company Plucked To"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/employeesAtWorkTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Employee Name"
            android:textColor="#ffffff"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/totalKilosTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kilos"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pay "
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <!-- Add ImageButtons for edit and delete icons -->
        <ImageView
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="center"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_gravity="center"
            android:layout_marginStart="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gyey"/>


    </TableRow>





</TableLayout>




    </HorizontalScrollView>


    <Button
        android:id="@+id/seeLessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Less"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="5dp"/>




</androidx.cardview.widget.CardView>



